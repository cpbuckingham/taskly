<div>
    <h1>My Lists</h1><%= link_to "+ List", "task_lists/new" %>

</div>
<br>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>
<% @task_lists.each do |task_list| %>

  <section class="task-list">
    <article>
      <h1><%= task_list.name %> <a><%= link_to "delete", task_list_path(task_list.id), :method => :delete %><%= link_to "edit", "task_lists/#{task_list.id}/edit" %></a></h1>

      <% task_list.tasks.each do |task|%>
          <ul><%=task.description%><a><%= link_to "delete", task_list_task_path(task_list.id, task.id) , :method => :delete %></a><%= link_to "edit", "tasks/#{task.id}/edit" %>

          </ul>
        <%end%>
        </article>
    <div id="links">
    <article>
      <%= link_to "+ task", new_task_list_task_path(task_list.id) %>
    </article>
      </div>
  </section>

<% end %>